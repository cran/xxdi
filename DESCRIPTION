Package: xxdi
Type: Package
Title: Calculate Expertise Indices
Version: 1.1.0
Authors@R: c(
    person("Nilabhra Rohan", "Das", , "nr.das@yahoo.com", role = c("cre", "aut"), comment = c(ORCID = "0000-0001-8187-0080")),
